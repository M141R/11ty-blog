	{% for post in postslist | reverse %}
    {% if limit === undefined or loop.index0 < limit %}
    <role role="list" class="articles__list flow">  
    </role>
    <ul role="list" class="articles__list flow">
      <li>
      <article class="snippet" {% if post.url == url %} data-current="current item"{% endif %}>
        <h5>
          <a class="snippet__title" href="{{ post.url | url }}">
            {% if post.data.title %}
              {{ post.data.title }}
            {% else %}
              Untitled
            {% endif %}
          </a>
        </h5>
        {% if post.data.image %}
        <img
          src="{{ post.data.image }}"
          alt="{{ post.data.imageAlt }}"
          class="snippet__image"
        />
        {% endif %}
        {% if post.data.description %}
          <p class="snippet__body">
            {{ post.data.description }}
          </p>
        {% endif %}
        {% if post.data.tags and show_postslist_tags %}
          <p class="tag-list">
            {% for tag in post.data.tags %}
              {%- if tag != "post" -%}
                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              <a class="tags" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
              {%- endif -%}
            {% endfor %}
          </p>
        {% endif %}
      </article>
    {% endif %}
    </li>
  </ul>
	{% endfor %}